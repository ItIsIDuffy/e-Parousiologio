<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parent_background"
    android:paddingStart="24dp"
    android:paddingTop="56dp"
    android:paddingEnd="24dp"
    android:paddingBottom="56dp"
    tools:context=".view.fragment.SelectCourseSectionToViewStudentsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/courseSectionToViewStudentsMTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/select_course_section"
        android:textColor="@color/reverseBW"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/courseSectionToViewStudentsELV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ExpandableListView
        android:id="@+id/courseSectionToViewStudentsELV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:childDivider="@color/parent_background"
        android:divider="@color/parent_background"
        android:dividerHeight="4dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseSectionToViewStudentsMTV" />

</androidx.constraintlayout.widget.ConstraintLayout>